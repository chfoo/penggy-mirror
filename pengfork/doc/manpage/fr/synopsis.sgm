<!-- here is the synopsis of the penggy
     command -->

<cmdsynopsis>
  <command>&pkgname;</command>
  <group>
    <arg>-h</arg><arg>--help</arg>
  </group>
  <group>
    <arg>-V</arg><arg>--version</arg>
  </group>
</cmdsynopsis>
<cmdsynopsis>
  <command>&pkgname;</command>
  <arg>options</arg>
  <group>
    <arg>-s<arg choice='plain'><replaceable>...</replaceable></arg></arg>
    <arg>--screen-name=<arg choice='plain'><replaceable>...</replaceable></arg></arg>
  </group>
</cmdsynopsis>
